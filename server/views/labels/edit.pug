extends ../layouts/application.pug

block header
  = t('views.labels.edit.header')

block content
  .card
    .card-body.p-5.bg-light
      +formFor()(action=`/labels/${label.id}` method='post')
        +input(label, 'name', errors, 'labels')(type="text")
        +buttonTo(`/labels/${label.id}`, 'patch')(class="btn btn-primary" value=t('views.labels.edit.change'))
