extends ../layouts/application.pug

block header
  = t('views.labels.header')

block content
  a.btn.btn-primary(href=route('newLabels'))= t('views.labels.create')
  table.table.table-striped
    thead
      tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.createdAt')
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td= formatDate(label.createdAt)
          td
            div.d-flex.flex-wrap
              a.btn.btn-primary.me-1(href=route('editLabels', label.id))= t('views.labels.edit.change')
              +buttonTo(route('destroyLabels', label.id), 'delete')(class="btn btn-danger" value=t('views.labels.edit.delete'))
