extends ../layouts/application.pug

block header
  = t('views.tasks.edit.header')

block content
  .card
    .card-body.p-5.bg-light
      +formFor()(action=`/tasks/${task.id}` method='post')
        +input(task, 'name', errors, 'tasks')(type="text")
        +textarea(task, 'description', errors, 'tasks')(cols="30", rows="3")
        +select(task, 'statusId', errors, 'tasks', statuses)
        +select(task, 'executorId', errors, 'tasks', users)
        +buttonTo(`/tasks/${task.id}`, 'patch')(class="btn btn-primary" value=t('views.tasks.edit.change'))
