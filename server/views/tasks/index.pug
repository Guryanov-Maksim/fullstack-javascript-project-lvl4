extends ../layouts/application.pug

block header
  = t('views.tasks.header')

block content
  a.btn.btn-primary(href=`tasks/new`)= t('views.tasks.create')
  table.table.table-striped
    thead
      tr
        th= t('views.tasks.id')
        th= t('views.tasks.name')
        th= t('views.tasks.status')
        th= t('views.tasks.author')
        th= t('views.tasks.executor')
        th= t('views.tasks.createdAt')
    tbody
      each task in tasks
        - const author = users.find((user) => user.id === task.creatorId);
        - const executor = users.find((user) => user.id === task.executorId) || {};
        tr
          td= task.id
          td= task.name
          td= task.status.name
          td= author.name
          td= executor.name
          td= formatDate(task.createdAt)
          td
            div.d-flex.flex-wrap
              a.btn.btn-primary.me-1(href=`tasks/${task.id}/edit`)= t('views.tasks.edit.change')
              +buttonTo(`/tasks/${task.id}`, 'delete')(class="btn btn-danger" value=t('views.tasks.edit.delete'))
