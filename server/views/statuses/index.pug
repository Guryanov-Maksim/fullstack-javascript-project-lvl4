extends ../layouts/application.pug

block header
  = t('views.statuses.header')

block content
  a.btn.btn-primary(href=route('newStatus'))= t('views.statuses.create')
  table.table.table-striped
    thead
      tr
        th= t('views.statuses.id')
        th= t('views.statuses.name')
        th= t('views.statuses.createdAt')
    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td= formatDate(status.createdAt)
          td
            div.d-flex.flex-wrap
              a.btn.btn-primary.me-1(href=route('editStatus', status.id))= t('views.statuses.edit.change')
              +buttonTo(route('destroyStatus', status.id), 'delete')(class="btn btn-danger" value=t('views.statuses.edit.delete'))
