extends ../layouts/application.pug

block header
  = t('views.statuses.edit.header')

block content
  .card
    .card-body.p-5.bg-light
      +formFor()(action=route('updateStatus', status.id) method='post')
        +input(status, 'name', errors, 'statuses')(type="text")
        +buttonTo(route('updateStatus', status.id), 'patch')(class="btn btn-primary" value=t('views.statuses.edit.change'))
